<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.githubuserapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <permission android:name="com.example.githubuserappE.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.example.githubuserapp.WRITE_DATABASE" android:protectionLevel="normal" />
    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserApp">
        <activity android:name=".MainActivity">
        </activity>
        <activity android:name=".SplashScreen"
            android:theme="@style/Theme.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserDetailActivity"
            android:theme="@style/Theme.Splash"/>
        <activity android:name=".FavouriteActivity"
            android:theme="@style/Theme.Splash"/>
        <receiver android:name=".notification.Reminder"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.BOOT_COMPLETED"/>

            </intent-filter>
        </receiver>
    </application>

</manifest>